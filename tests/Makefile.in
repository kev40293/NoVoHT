CXX=g++
CXXFLAGS=-Wall
SRCDIR=../src
LDFLAGS=-pthread -I$(SRCDIR)

.SUFFIXES:
.SUFFIXES: .cxx .cpp .o

all: genbench

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $< -o $@

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $< -o $@

genbench: genbench.cpp
	$(CXX) $(SRCDIR)/novoht.o genbench.cpp -I$(SRCDIR) $(LDFLAGS) -o genbench

clean:
	rm -rf *.o genbench

distclean: clean
	rm Makefile

install:

uninstall:

