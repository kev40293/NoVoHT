PROJECT=HashTable
CC=g++
CFLAGS=-Wall
BINS=fbench pbench genbench
MAKE=make

SRCDIR=src
BINDIR=bin
TESTDIR=tests
SUBDIRS=$(SRCDIR) $(TESTDIR)
CLEANDIRS=$(SUBDIRS:%=clean-%)

PREFIX=/usr/local

OBJECTS=novoht.o
LDFLAGS=-I$(SRCDIR) -lpthread

.PHONY: subdirs $(SUBDIRS)

subdirs: $(SUBDIRS)

$(SUBDIRS):
	$(MAKE) -C $@

$(TESTDIR): $(SRCDIR)

.PHONY: clean

clean: $(CLEANDIRS)

$(CLEANDIRS):
	$(MAKE) -C $(@:clean-%=%) clean
